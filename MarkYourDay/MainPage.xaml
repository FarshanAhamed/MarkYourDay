<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MarkYourDay"
             xmlns:myView="clr-namespace:ButtonCircle.FormsPlugin.Abstractions;assembly=ButtonCircle.FormsPlugin.Abstractions"
             x:Class="MarkYourDay.MainPage">
    <StackLayout >
        <myView:CircleButton 
                x:Name="CheckInBtn"
                Text="Check In" 
                Icon="ic_directions_bike" 
                TextColor="#4094d9" 
                HeightRequest="150" WidthRequest="150"
                HorizontalOptions="Center"
                BorderRadius="100"
                BorderThickness="5" BorderColor="#4094d9" 
                BackgroundColor="#DCDCDC" />

        <Button
                x:Name="CheckOutBtn" Text="Check Out"  
                TextColor="#4094d9" 
                WidthRequest="60" HeightRequest="60"
                VerticalOptions="End" HorizontalOptions="Center"
                BorderRadius="100" BorderColor="#4094d9" 
                />
    </StackLayout>
</ContentPage>